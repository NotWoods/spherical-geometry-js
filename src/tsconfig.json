{
  "include": ["./index.d.ts", "./**/*.js"],
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "target": "es2018",
    "module": "ES2020",
    "emitDeclarationOnly": true,
    "checkJs": true,
    "allowJs": true,
    "pretty": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  }
}
